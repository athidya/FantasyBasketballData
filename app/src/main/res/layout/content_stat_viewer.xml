<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_stat_viewer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.athidya.mydataapp.StatViewerActivity"
    tools:showIn="@layout/activity_stat_viewer">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/spinner13"
        android:layout_marginTop="21dp">

        <HorizontalScrollView android:layout_height="match_parent"
            android:layout_width="350dp">

            <TableLayout
                android:id="@+id/main_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TableLayout>
        </HorizontalScrollView>

    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:text="Team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Time Frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_marginStart="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spinner13"
        android:textColor="#000000"
        android:layout_height="30dp"
        android:background="?android:attr/colorBackground"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_width="110dp" />

    <Spinner
        android:id="@+id/spinner10"
        android:layout_height="30dp"
        android:textColor="#000000"
        android:background="?android:attr/colorBackground"
        android:layout_width="110dp"
        android:layout_below="@+id/textView15"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/spinner12"
        android:layout_width="80dp"
        android:textColor="#000000"
        android:layout_height="30dp"
        android:background="?android:attr/colorBackground"
        android:layout_below="@+id/textView13"
        android:layout_toEndOf="@+id/spinner10"
        android:layout_marginStart="12dp" />

    <TextView
        android:text="Stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/spinner12"
        android:layout_marginEnd="24dp" />

</RelativeLayout>
