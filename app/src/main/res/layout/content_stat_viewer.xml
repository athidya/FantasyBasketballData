<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_stat_viewer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.athidya.mydataapp.StatViewerActivity"
    tools:showIn="@layout/activity_stat_viewer">

    <Spinner
        android:id="@+id/spinner11"
        android:layout_width="80dp"
        android:layout_below="@+id/textView12"
        android:layout_toEndOf="@+id/spinner10"
        android:textColor="#000000"
        android:layout_marginStart="14dp"
        android:layout_height="30dp"
        android:background="?android:attr/colorBackground" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/spinner13"
        android:layout_marginTop="21dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView17" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView18" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>
    </android.support.v4.widget.NestedScrollView>

    <Spinner
        android:id="@+id/spinner13"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/spinner10"
        android:textColor="#000000"
        android:layout_height="30dp"
        android:layout_width="80dp"
        android:background="?android:attr/colorBackground" />

    <TextView
        android:text="Team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/spinner11"
        android:layout_marginEnd="16dp" />

    <TextView
        android:text="Time Frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_marginStart="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spinner10"
        android:layout_height="30dp"
        android:layout_below="@+id/textView15"
        android:layout_toEndOf="@+id/textView11"
        android:textColor="#000000"
        android:layout_marginStart="12dp"
        android:layout_width="80dp"
        android:background="?android:attr/colorBackground" />

    <Spinner
        android:id="@+id/spinner12"
        android:layout_width="80dp"
        android:layout_below="@+id/textView13"
        android:textColor="#000000"
        android:layout_alignParentEnd="true"
        android:layout_height="30dp"
        android:background="?android:attr/colorBackground" />

    <TextView
        android:text="Stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/spinner12"
        android:layout_marginStart="27dp" />

    <TextView
        android:text="Player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_marginStart="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/spinner11" />

</RelativeLayout>
